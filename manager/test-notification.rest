@host = http://localhost:3000
@notification_endpoint = {{host}}/api/send-notification

### Test notification with custom email
POST {{notification_endpoint}}
Content-Type: application/json

{
    "message": "Test notification with custom email",
    "subscription": {
        "endpoint": "https://fcm.googleapis.com/fcm/send/test",
        "keys": {
            "p256dh": "test_key",
            "auth": "test_auth"
        }
    },
    "email": "user@example.com"
}

